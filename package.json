{
  "name": "family-calendar-app",
  "version": "1.0.0",
  "description": "Family Calendar with Task Management and Meal Planning",
  "scripts": {
    "start": "npm run kill-ports && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "kill-ports": "kill-port --port 3000,4200",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon api/server.js",
    "dev:frontend": "cd frontend && ng serve",
    "build": "cd frontend && ng build",
    "start:prod": "node api/server.js",
    "vercel-build": "cd frontend && npm install && ng build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "firebase-admin": "^12.0.0",
    "googleapis": "^128.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1"
  }
}
